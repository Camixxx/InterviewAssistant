{
  "name": "SpeechToTextBrowserStarterApp",
  "version": "1.0.1",
  "description": "A sample browser app for Bluemix that use the speech-to-text service, fetching a token via Node.js",
  "dependencies": {
    "body-parser": "~1.14.1",
    "cookie-parser": "^1.4.0",
    "csurf": "^1.8.3",
    "ejs": "^2.3.4",
    "express": "~4.13.3",
    "express-rate-limit": "^2.0.2",
    "express-secure-only": "^0.2.1",
    "helmet": "^0.12.0",
    "morgan": "^1.6.1",
    "vcap_services": "^0.1.7",
    "watson-developer-cloud": "^0.10.6",
    "mongodb": "*",
    "cloudant":"*",
    "nano":"*",
    "i18next":"*",
    "errorhandler":"*",
    "method-override":"*",
    "connect-multiparty":"*",
    "browserify":"*",
    "browserify-shim":"*",
    "request":"*",
    "uglifyjs":"*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/watson-developer-cloud/speech-to-text-nodejs.git"
  },
  "author": "shu-and-lea",
  "browserify-shim": {
    "jquery": "global:jQuery"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "contributors": [
