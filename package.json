    }
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/watson-developer-cloud/speech-to-text-nodejs/issues"
  },
  "scripts": {
    "start": "node app.js",
    "build": "browserify src/index.js | uglifyjs -nc > public/js/index.js",
